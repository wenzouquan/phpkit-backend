                    render: function(data, type, row, meta) {
                        return '<label class="pos-rel"><input type="checkbox" name="ids[]" value="' + data + '" class="ace" /><span class="lbl"></span></label>'
                    }
                },
                //列表绑定数据键名
                <?php foreach($columnsList as $column){ ?> 
                {
                    "data": "<?php echo $column['name']?>"
                },
                 <?php } ?>
                {
                    bSortable: false,
                    data: '<?php echo $modelPk ?>',
                    render: function(data, type, row, meta) {
                        var html = $("#actBnt").html();
                        var render = template.compile(html);
                        var compiledRendered = render({
                            Id: data
                        });
                        return compiledRendered;
                    }
                }
            ],
            //数据请求
            "ajax": {
                url: "<php> echo $this->url->get($this->dispatcher->getControllerName().'/search')</php>",
                data: function(d) {
                    return $.extend({}, d, {
                        'fromAjax': 1
                    });
                }
            }
            //更多配置，请参考jquery.dataTables 官网

   };

   //实例化
   var myTable = phpkitApp.DataTable('dynamic-table',config);

    //删一条数据
    function deleteRow(ids) {
        $.getJSON('<php> echo $this->url->get($this->dispatcher->getControllerName().'/delete')</php>', {
            ids: ids
        }, function(data) {
            if (data.error == 0) {
                myTable.draw(false)
            } else {
                alert(data.msg);
            }
        })
    }

    $(document).on('click', ".delBnt", function() {
        var r = confirm("确认删除吗？");
        if (r) {
            var id = $(this).attr('data-id');
            deleteRow(id);
        }
    })
})
</script>
